@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
	ViewData["PageTitle"] = "Application Roles";
	ViewData["PageActionText"] = "+ New Role";
	ViewData["PageActionUrl"] = "/AppRoles/Create";
}

